<div class="container-fluid" style="font-family: 'Open Sans', sans-serif;">
</br>
</br>
  <div class="col-sm-4 col-sm-offset-4" style="background-color:#093954; color: white; font-family: 'Montserrat', sans-serif; padding-left: 30px; padding-right: 30px;">
    </br>
      <% flash.each do |key, value| %>
       <div class="alert alert-info" role="alert"><%= value %></div>
      <% end %>
    </br>
    <h2>Sign-in</h2>
    </br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"form-control",  autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Sign-in", class:"btn btn-lg btn-default" %>
      </div>
    <% end %>
    </br>
    </br>
    <p><i>First time here? <%= render "devise/shared/links" %></i></p>

    <br>
    <br>
  </div>
</div>

